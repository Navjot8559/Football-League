<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddManager">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/ic_user">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tv_add_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:text="Add Team Manager"
            android:layout_below="@+id/img_user"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark">
        </TextView>

        <EditText
            android:id="@+id/manager_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Manager Name"
            android:inputType="text"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_add_manager"/>

        <EditText
            android:id="@+id/manager_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Manager Phone"
            android:inputType="text"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/manager_name"/>

        <EditText
            android:id="@+id/manager_team"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Team Name"
            android:inputType="text"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/manager_phone"/>


        <EditText
            android:id="@+id/manager_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Set Password"
            android:inputType="text"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/manager_team"/>

        <Button
            android:id="@+id/add_manager"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manager_password"
            android:background="@drawable/button_shape"
            android:text="Add Team Manager"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>