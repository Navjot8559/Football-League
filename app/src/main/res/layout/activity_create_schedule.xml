<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateSchedule">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_match_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Details"
            android:textSize="24sp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark">

        </TextView>


        <EditText
            android:id="@+id/team1_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/textview_shape"
            android:hint="Team 1 Id"
            android:inputType="number"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_match_details"/>

        <EditText
            android:id="@+id/team2_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Team 2 Id"
            android:inputType="number"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/team1_id"/>

        <TextView
            android:id="@+id/match_date"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Match Date"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/team2_id"/>

        <TextView
            android:id="@+id/match_time"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Match Time"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/match_date"/>

        <EditText
            android:id="@+id/match_location"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Match Location"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/match_time"/>

        <Button
            android:id="@+id/schedule_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_location"
            android:background="@drawable/button_shape"
            android:text="Schedule"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>