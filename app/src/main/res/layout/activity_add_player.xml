<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlayer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/player_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:src="@drawable/ic_add_photo_circle">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/add_player_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to add Player Image"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/player_image">

        </TextView>

        <EditText
            android:id="@+id/player_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/textview_shape"
            android:hint="Name"
            android:inputType="text"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_player_image"/>

        <EditText
            android:id="@+id/player_age"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Age"
            android:inputType="number"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/player_name"/>

        <EditText
            android:id="@+id/player_position"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_shape"
            android:hint="Position"
            android:inputType="text"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/player_age"/>

        <Button
            android:id="@+id/add_player_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_position"
            android:background="@drawable/button_shape"
            android:text="Add Player"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>